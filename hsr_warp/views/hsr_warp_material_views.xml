<?xml version="1.0"?>
<odoo>
    <record id="hsr_warp_material_view_tree" model="ir.ui.view">
        <field name="name">hsr_warp.material.template.tree</field>
        <field name="model">sr.item.material</field>
        <field name="arch" type="xml">
            <tree string="Upgrade Materials">
                <field name="img_id" widget="attachment_image" class="hsr_tree_img"/>
                <field name="name"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <record id="hsr_warp_material_view_form" model="ir.ui.view">
        <field name="name">hsr_warp.material.form</field>
        <field name="model">sr.item.material</field>
        <field name="arch" type="xml">
            <form string="Materials" readonly="1">
                <sheet>
                    <field name="img_id" widget="attachment_image" class="image_bg_float"/>
                    <div class="oe_title">
                        <label for="name" string="Material Name"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="hsr_warp_material_view_kanban" model="ir.ui.view">
        <field name="name">hsr_warp.material.kanban</field>
        <field name="model">sr.item.material</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="type"/>
                <field name="img_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div><field name="img_id" widget="attachment_image" class="image_bg_float hsr_tree_img"/></div>
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div><field name="type"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>