<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-inherit="web.AttachmentImageField" t-inherit-mode="extension" owl="1">
        <xpath expr="//img" position="replace">
            <img t-if="props.value" t-attf-src="/web/image/{{ props.value[0] }}?unique=1" t-att-title="props.value[1]" alt="Image" class="att_image_resize"/>
        </xpath>
    </t>

</templates>