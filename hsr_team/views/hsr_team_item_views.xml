<?xml version="1.0"?>
<odoo>
    <menuitem id="menu_sr_items_root" name="Items" sequence="20" parent="menu_character_root"/>
    
    <record id="sr_item_material_view_form" model="ir.ui.view">
        <field name="name">hsr_team.material.form</field>
        <field name="model">sr.item.material</field>
        <field name="arch" type="xml">
            <form string="Materials">
                <sheet>
                    <field name="image" widget="image" style="background-color:#0000;float:right;"/>
                    <div class="oe_title">
                        <label for="name" string="Material Name"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name" placeholder="e.g. Cheese Burger"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="rarity"/>
                            <field name="type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>

    </record>

    <record id="sr_item_materials_action" model="ir.actions.act_window">
        <field name="name">Upgrade Materials</field>
        <field name="res_model">sr.item.material</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sr_item_materials" name="Upgrade Materials" sequence="10" parent="menu_sr_items_root" action=""/>

</odoo>