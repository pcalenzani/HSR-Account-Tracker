<?xml version="1.0"?>
<odoo>
    <menuitem id="menu_character_root" name="Characters" sequence="31" web_icon="hsr_warp,static/description/icon(10).jpg"/>

    <!-- SR.CHARACTER -->
    <record id="sr_character_view_tree" model="ir.ui.view">
        <field name="name">hsr_team.character.tree</field>
        <field name="model">sr.character</field>
        <field name="arch" type="xml">
            <tree string="Characters">
                <field name="name"/>
                <field name="element_id"/>
                <field name="path_id"/>
                <field name="is_owned" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="sr_character_view_form" model="ir.ui.view">
        <field name="name">hsr_team.character.form</field>
        <field name="model">sr.character</field>
        <field name="arch" type="xml">
            <form string="Characters">
                <sheet>
                    <field name="item_id" invisible="1"/>
                    <field name="is_owned" invisible="1"/>
                    <field name="template_id" invisible="1"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <field name="rarity" widget="priority" edit="0"/>
                    <group>
                        <group>
                            <field name="element_id"/>
                            <field name="path_id"/>
                        </group>
                        <group>
                            <field name="level"/>
                            <field name="rank"/>
                            <field name="promotion"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Light Cone">
                            <group>
                                <field name="light_cone_id"/>
                            </group>
                        </page>
                        <page string="Eidolons">
                            <field name="eidolon_ids" mode="kanban">
                                <kanban>
                                    <field name="title"/>
                                    <field name="level"/>
                                    <field name="owned"/>
                                    <templates>
                                        <t t-name="kanban-box">

                                            <t t-set="color" t-value="1"/>
                                            <div t-att-class="oe_kanban_global_click" style="background-color:#1c6e7b;">
                                                <!-- <div class="o_kanban_image">
                                                    <img alt="Contact image" t-att-src="kanban_image('res.partner', 'avatar_128', record.id.raw_value)"/>
                                                </div> -->
                                                <div class="oe_kanban_details">
                                                    <field name="title"/>
                                                    <div><field name="level"/></div>
                                                    <div><field name="description"/></div>
                                                    <div t-if="record.owned.raw_value"><field name="owned"/></div>
                                                </div>
                                            </div>

                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Upgrade Mats">
                            <group>
                                <field name="ascension_mat_id"/>
                                <field name="advanced_mat_id"/>
                                <field name="general_mat_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sr_character_action" model="ir.actions.act_window">
        <field name="name">Characters</field>
        <field name="res_model">sr.character</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_characters" name="Characters" sequence="10" 
        parent="menu_character_root"
        action="sr_character_action"/>

    <!-- SR.CHARACTER.TEMPLATE -->
    <record id="sr_character_template_view_tree" model="ir.ui.view">
        <field name="name">hsr_team.character.template.tree</field>
        <field name="model">sr.character.template</field>
        <field name="arch" type="xml">
            <tree string="Character Templates">
                <field name="icon_image" class="image_bg" widget="image"/>
                <field name="avatar"/>
                <field name="element_id"/>
                <field name="path_id"/>
            </tree>
        </field>
    </record>

    <record id="sr_character_template_view_search" model="ir.ui.view">
        <field name="name">hsr_team.character.template.search</field>
        <field name="model">sr.character.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="avatar"/>
                <field name="character_id"/>
                <field name="element_id"/>
                <field name="path_id"/>
                <group expand="0" string="Group By">
                    <filter string="Element" name="element" domain="[]" context="{'group_by': 'element_id'}"/>
                    <filter string="Aeon Path" name="path" domain="[]" context="{'group_by': 'path_id'}"/>
                    <filter string="General Material" name="general_mat" domain="[]" context="{'group_by': 'general_mat_id'}"/>
                    <filter string="Advanced Material" name="advanced_mat" domain="[]" context="{'group_by': 'advanced_mat_id'}"/>
                    <filter string="Ascension Material" name="ascension_mat" domain="[]" context="{'group_by': 'ascension_mat_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="sr_character_template_view_form" model="ir.ui.view">
        <field name="name">hsr_team.character.template.form</field>
        <field name="model">sr.character.template</field>
        <field name="arch" type="xml">
            <form string="Character Settings">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                      <button name="action_element" class="oe_stat_button">
                        <div>
                          <span>
                            <field name="element_img" widget="image" options="{'size': [36,36]}" class="image_bg"/>
                          </span>
                          <span class="o_stat_text">
                            <field name="element_id" style="margin-left:5px;margin-top:5px;font-size:15px"/>
                          </span>
                        </div>
                      </button>
                      <button name="action_path" class="oe_stat_button" string="test">
                        <div>
                          <span>
                            <field name="path_img" widget="image" options="{'size': [36,36]}" class="image_bg"/>
                          </span>
                          <span class="o_stat_text">
                            <field name="path_id" style="margin-left:5px;margin-top:5px;font-size:15px"/>
                          </span>
                        </div>
                      </button>
                    </div>
                    <field name="preview_image" widget="image" class="image_bg_float"/>
                    <div class="oe_title">
                        <field name="character_id" readonly="1"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="avatar"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="element_id"/>
                            <field name="path_id"/>
                            <field name="icon_image" widget="image" options="{'size': [128,128]}" class="image_bg"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Eidolons">
                            <field name="eidolon_ids"/>
                        </page>
                        <page string="Pulls">
                            <field name="warp_ids"/>
                        </page>
                        <page string="Art">
                            <field name="portrait_image" widget="image" class="image_bg"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sr_character_template_action" model="ir.actions.act_window">
        <field name="name">Character Settings</field>
        <field name="res_model">sr.character.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sr_character_template" name="Character Settings" sequence="0" parent="menu_sr_config_root" action="sr_character_template_action"/>

</odoo>