<?xml version="1.0"?>
<odoo>
    <!-- SR.CHARACTER -->
    <record id="sr_character_view_tree" model="ir.ui.view">
        <field name="name">hsr_team.character.tree</field>
        <field name="model">sr.character</field>
        <field name="arch" type="xml">
            <tree string="Characters" decoration-warning="rarity == '5'" decoration-primary="rarity == '4'" decoration-bf="rarity != '3'">
                <field name="name"/>
                <field name="element_id"/>
                <field name="path_id"/>
                <field name="is_owned" column_invisible="1"/>
                <field name="rarity" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="sr_character_view_form" model="ir.ui.view">
        <field name="name">hsr_team.character.form</field>
        <field name="model">sr.character</field>
        <field name="arch" type="xml">
            <form string="Characters">
                <sheet>
                    <field name="item_id" invisible="1"/>
                    <field name="is_owned" invisible="1"/>
                    <field name="template_id" invisible="1"/>
                    <div class="oe_title">
                        <label for="name" string="Character Name"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name" widget="text" readonly="1" options="{'line_breaks': False}" decoration-warning="rarity == '5'" decoration-primary="rarity == '4'"/>
                            </div>
                        </h1>
                    </div>
                    <field name="rarity" widget="priority" edit="0"/>
                    <group>
                        <group>
                            <field name="element_id"/>
                            <field name="path_id"/>
                            <field name="level"/>
                            <field name="rank"/>
                            <field name="promotion"/>
                        </group>
                        <group>
                            <field name="att_hp" string="HP"/>
                            <field name="att_atk" string="ATK"/>
                            <field name="att_def" string="DEF"/>
                            <field name="att_spd" string="SPD"/>
                            <field name="att_crit_rate" string="CRIT RATE"/>
                            <field name="att_crit_dmg" string="CRIT DMG"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Light Cone">
                            <group>
                                <field name="light_cone_id"/>
                            </group>
                        </page>
                        <page string="All Stats">
                            <field name="attribute_ids"/>
                        </page>
                        <page string="Eidolons">
                            <field name="eidolon_ids" mode="kanban">
                                <kanban>
                                    <field name="title"/>
                                    <field name="level"/>
                                    <field name="owned"/>
                                    <templates>
                                        <t t-name="kanban-box">

                                            <t t-set="color" t-value="1"/>
                                            <div t-att-class="oe_kanban_global_click" style="background-color:#1c6e7b;">
                                                <!-- <div class="o_kanban_image">
                                                    <img alt="Contact image" t-att-src="kanban_image('res.partner', 'avatar_128', record.id.raw_value)"/>
                                                </div> -->
                                                <div class="oe_kanban_details">
                                                    <field name="title"/>
                                                    <div><field name="level"/></div>
                                                    <div><field name="description"/></div>
                                                    <div t-if="record.owned.raw_value"><field name="owned"/></div>
                                                </div>
                                            </div>

                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Upgrade Mats">
                            <group>
                                <field name="ascension_mat_id"/>
                                <field name="advanced_mat_id"/>
                                <field name="general_mat_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- SR.CHARACTER.TEMPLATE -->
    <record id="sr_character_template_view_search_inherit" model="ir.ui.view">
        <field name="name">hsr_warp.character.template.search.inherit.hsr_team</field>
        <field name="model">sr.character.template</field>
        <field name="inherit_id" ref="hsr_warp.sr_character_template_view_search"/>
        <field name="mode">extension</field>
        <field name="priority">80</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//group" position="inside">
                    <filter string="Ascension Material" name="ascension_mat" domain="[]" context="{'group_by': 'ascension_mat_id'}"/>
                    <filter string="Advanced Material" name="advanced_mat" domain="[]" context="{'group_by': 'advanced_mat_id'}"/>
                    <filter string="General Material" name="general_mat" domain="[]" context="{'group_by': 'general_mat_id'}"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="sr_character_template_view_form_inherit" model="ir.ui.view">
        <field name="name">hsr_warp.character.template.form.inherit.hsr_team</field>
        <field name="model">sr.character.template</field>
        <field name="inherit_id" ref="hsr_warp.sr_character_template_view_form"/>
        <field name="mode">extension</field>
        <field name="priority">80</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook" position="inside">
                    <page string="Eidolons">
                        <field name="eidolon_ids"/>
                    </page>
                    <page string="Upgrade Materials">
                        <group>
                            <field name="ascension_mat_id"/>
                            <field name="advanced_mat_id"/>
                            <field name="general_mat_id"/>
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>
</odoo>