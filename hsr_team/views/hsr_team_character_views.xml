<?xml version="1.0"?>
<odoo>
    <menuitem id="menu_character_root" name="Characters" sequence="31" web_icon="hsr_warp,static/description/icon(10).jpg"/>

    <!-- SR.CHARACTER -->
    <record id="hsr_team_character_view_tree" model="ir.ui.view">
        <field name="name">hsr_team.character.tree</field>
        <field name="model">sr.character</field>
        <field name="arch" type="xml">
            <tree string="Characters">
                <field name="name"/>
                <field name="element"/>
                <field name="path"/>
                <field name="is_owned" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="hsr_team_character_view_form" model="ir.ui.view">
        <field name="name">hsr_team.character.form</field>
        <field name="model">sr.character</field>
        <field name="arch" type="xml">
            <form string="Characters">
                <sheet>
                    <field name="item_id" invisible="1"/>
                    <field name="is_owned" invisible="1"/>
                    <field name="template_id" invisible="1"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="element"/>
                            <field name="path"/>
                        </group>
                        <group>
                            <field name="rarity"/>
                            <field name="level"/>
                            <field name="rank"/>
                            <field name="promotion"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Light Cone">
                            <group>
                                <field name="light_cone_id"/>
                            </group>
                        </page>
                        <page string="Eidolons">
                            <field name="eidolon_ids" mode="kanban">
                                <kanban>
                                    <field name="title"/>
                                    <field name="level"/>
                                    <field name="owned"/>
                                    <templates>
                                        <t t-name="kanban-box">

                                            <t t-set="color" t-value="1"/>
                                            <div t-att-class="oe_kanban_global_click" style="background-color:#1c6e7b;">
                                                <!-- <div class="o_kanban_image">
                                                    <img alt="Contact image" t-att-src="kanban_image('res.partner', 'avatar_128', record.id.raw_value)"/>
                                                </div> -->
                                                <div class="oe_kanban_details">
                                                    <field name="title"/>
                                                    <div><field name="level"/></div>
                                                    <div><field name="description"/></div>
                                                    <div t-if="record.owned.raw_value"><field name="owned"/></div>
                                                </div>
                                            </div>

                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Upgrade Mats">
                            <group>
                                <field name="ascension_mat_id"/>
                                <field name="advanced_mat_id"/>
                                <field name="general_mat_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hsr_warp_character_action" model="ir.actions.act_window">
        <field name="name">Characters</field>
        <field name="res_model">sr.character</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_characters" name="Characters" sequence="10" 
        parent="menu_character_root"
        action="hsr_warp_character_action"/>

    <!-- SR.CHARACTER.TEMPLATE -->
</odoo>